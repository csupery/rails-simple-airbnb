<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats <%= "(#{Flat.all.size})" %></h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <div class="card-body bg-light">
            <h5 class="card-title"> <%= flat.name %> </h5>
            <p class="card-text"> <%= flat.address %> </p>
            <div class="d-flex">
              <div class="flex icon mr-3">
                <i class="fas fa-user-friends mr-1">  </i> <span class="icon-content"> <%= flat.number_of_guest %></span>
              </div>
              <div class="flex icon">
                <i class="fas fa-euro-sign mr-1"> </i> <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="card-actions ml-2 mt-4 mb-3 d-flex">
            <h6> <%= link_to 'More Info', flat, class: "ml-3 text-primary" %> </h6>
            <h6> <%= link_to 'Edit', edit_flat_path(flat), class: "ml-3 text-warning" %> </h6>
            <h6> <%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-3 text-danger" %></h6>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
